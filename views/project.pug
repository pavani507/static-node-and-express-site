extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        h1 #{project.project_name}

        p.lead.text-light
          | #{project.description}

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies

        ul
         each tech in project.technologies
            li= tech

        a.button.expanded(href=`${project.livelink}`) Live Demo
        a.button.expanded(href=`${project.github_link}`) GitHub Repo
    
    img.image(src=`/projects/static/img/${project.image_urls[0]}` width='1000px' height='500px')
    img.image(src=`/projects/static/img/${project.image_urls[1]}` width='1000px' height='500px')
    