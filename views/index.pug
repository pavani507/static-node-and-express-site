extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      h1 Let's make the web great together!

      p.lead.text-light
        | The site will contain a modern landing page, an about page where you'll have a chance to share contact info, practice your elevator pitch and talk a little about yourself
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      
      

      each project in projects
         .cell
           a(href=`/projects/${project.id}`)
             img.thumbnail(src=`/projects/static/img/${project.image_urls[0]}`)
             h7 #{project.project_name}
